@model IEnumerable<Voltaire.Models.Question>


@{
    ViewBag.Title = "Index";
}

<h2>Liste des questions du @TempData["niv"]</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.enonce)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.regle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
    
            <td>
                @Html.DisplayFor(modelItem => item.enonce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.regle)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                @Html.ActionLink("Details", "Details", new { id=item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.id })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Retourner a la liste ", "Index", "Niveaux",new {diff=@TempData["diff"]}, null)
</p>